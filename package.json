{
  "name": "dyal",
  "version": "0.0.3",
  "repository": "https://github.com/lstrojny/dyal",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^1.14.3",
    "ts-loader": "^5.2.2",
    "typescript": "^3.1.3",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "scripts": {
    "build": "yarn && webpack",
    "dev": "webpack --watch --mode=development",
    "fmt": "prettier --write src/*",
    "testbed": "webpack --mode=development --output=testbed/dist/loader.js && cd testbed && python -m SimpleHTTPServer 8081",
    "publish": "yarn && webpack && npm publish"
  }
}
